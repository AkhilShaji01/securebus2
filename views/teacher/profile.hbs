<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Profile</h1>
          </div>
          
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        {{!-- <h5 class="mb-2">Basic Details</h5> --}}
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Basic Details </h3>
              </div>
              {{#if pc}}
              <input type="text" name="pc" id="pc" value="password changed" hidden>
              
              <script>
                var pc=document.getElementById("pc").value
                alert(pc)
              </script>
              {{/if}}
              <!-- /.card-header -->
              <div class="card-body">
                        <div class="row margin" style="font-size: larger;">
                            {{#each res1}}
                            <div class="col-sm-6" id="img">
                            <img src="../../profileimages/teacher{{this.staffid}}.png" alt="no image" style="height: 215px;width:215px" />
                            <a href="/teacher/changeimage"><button>Change Image</button></a>
                            </div>
                            <div class="col-sm-6">
                                {{!-- <div class="row margin">
                                    Admission number:{{this.admissionnumber}}
                                </div> --}}
                                <div class="row margin">
                                    Name: {{this.firstname}} {{this.lastname}}
                                </div>
                                <div class="row margin">
                                    Department: {{this.departmentname}}
                                </div>
                                <div class="row margin">
                                    Phone number: {{this.mobile}}
                                </div>
                                <div class="row margin">
                                    Email: {{this.email}}
                                </div>
                                <div class="row margin">
                                    Address: {{this.address}}
                                </div>
                                {{!-- <div class="row margin">
                                    Class: {{this.classname}}
                                </div> --}}
                                <div class="row margin" id="do">
                                   
                                </div>
                                <input type="text" name="doj" id="doj" value="{{this.doj}}" hidden>
                                <script>
                                  var r=document.getElementById("doj").value
                                  var r1=String(r)
                                  var r2=new Date(r1)
                                  const formattedDate = r2.toLocaleDateString('en-GB');
                                  var d=document.getElementById("do");
                                  d.innerHTML="date of Joining: " +formattedDate
                                  //alert(r)
                                  
                                </script>
                                <div class="row margin">
                                    Assigned class: {{this.classname}}
                                </div>
                                 
                            </div>
                            <br><br>
                            <hr>
                            
                        </div>
                        <br>
                        <br>
                        <hr>
                        <div class="row margin">
                        
                            <form action="/teacher/editprofile" method="post" style="margin-left: 10px;">
                            <input type="text" name="staffid" id="studentid" value="{{this.staffid}}" hidden>
                                <button type="submit" formmethod="post" class="btn btn-primary">Edit Profile</button>        
                        </form>
                        
                        <form action="/teacher/changepassword"  method="post" style="margin-left: 10px;">
                            <input type="text" name="staffid" id="" value="{{this.staffid}}" hidden>
                            <input type="email" name="email" id="" value="{{this.email}}" hidden>
                            <button type="submit" formmethod="post" class="btn btn-success">Change password</button>
                        </form>
                        
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
       {{/each}}
        <!-- /.row -->
        <!-- /.row -->
        
        <!-- =========================================================== -->
        
        <!-- /.row -->

         
      </div><!-- /.container-fluid -->
