                  <tr>
                    <th>Admission number</th>
                    <th>Name</th>
                    <th>Class</th>
                    <th>options</th>
                  </tr>
                  </thead>
                  <tbody>
                    {{#each dt}}
                  <tr>
                    {{!-- {{#if this.admissionnumber=='19cs0001'}} --}}
                    <td>{{this.admissionnumber}}</td>
                    {{!-- {{/if}} --}}
                    <td>{{this.firstname}} {{this.lastname}}</td>
                    <td>{{this.classname}}</td>
                    <td>
                      <form action="/teacher/profileofeachstudent" method="post">
                      <input type="text" name="studentid" id="" value="{{this.studentid}}" hidden>
                      <input type="submit" value="view profile" style="background-color: rgb(70, 158, 240);">
                      </form>
                      
                      
                    </td>

                  </tr>
                 {{/each}}
                  </tbody>
                  <tfoot>
                 
                </table>
              </div>
